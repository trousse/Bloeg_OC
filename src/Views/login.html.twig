{% extends "main_template.html.twig" %}

{% block page %}
    <section class="hero is-fullheight">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="box column is-4 is-offset-4">
                    <h3 class="title has-text-black">Login</h3>
                    <hr class="login-hr">
                    <p class="subtitle has-text-black">Please login to proceed.</p>
                    {% if error %}<div class="notification is-danger m-3"> <p> {{ error }}</p></div>{% endif %}
                    <div class="container m-3">
                        <form method="POST" action="/login">
                            <div class="field">
                                <div class="control">
                                    <input class="input is-large" type="email" name="email" placeholder="Your Email" autofocus="" {% if email %} value = "{{ email }}"{% endif %}>
                                </div>
                            </div>

                            <div class="field">
                                <div class="control">
                                    <input class="input is-large" type="password" name="pass" placeholder="Your Password" autofocus="" {% if pass %} value = "{{ pass }}"{% endif %}>
                                </div>
                            </div>
                            <button class="button is-block is-large is-fullwidth">Login <i class="fa fa-sign-in" aria-hidden="true"></i></button>
                            <div class="has-text-centered is-fullwidth mt-4"><a href="/subscribe">- Register now -</a></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

